<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_root"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/base_title_bg">


    <TextView
        android:id="@+id/tv_titel_special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="联系我们"
        android:textColor="@color/base_font1"
        android:textSize="18sp" />


    <LinearLayout
        android:id="@+id/ll_back_special"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="6dp">

        <ImageView
            android:id="@+id/iv_back_special"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="2dp"
            android:src="@mipmap/core_back"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tv_back_special"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="@color/base_font1"
            android:textSize="14sp"
            android:visibility="visible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_menu_special"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:src="@mipmap/refresh" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/base_divider"></View>

</RelativeLayout>